<h1>New Post</h1>

<%= form_with scope: :post, url: posts_path, local: true do |form| %>
    <p>
        <%= form.label :username %><br>
        <%= form.text_field :username %>
    </p>

    <p>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
    </p>
   
    <p>
        <%= form.label :content %><br>
        <%= form.text_area :content %>
    </p>
   
    <p>
        <%= form.submit %>
    </p>
<% end %>