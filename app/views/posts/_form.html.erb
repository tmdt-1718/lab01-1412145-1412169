<div class="card-body">
    <%= form_with model: @post, local: true do |form| %>
        
        <p>
            <%= form.label :title %><br>
            <%= form.text_field :title, :class => 'form-control' %>
        </p>
        
        <p>
            <%= form.label :content %><br>
            <%= form.text_area :content, :class => 'form-control' %>
        </p>
        
        <p>
            <%= form.submit :class => 'btn btn-primary' %>
        </p>
        
    <% end %>
</div>




