<div class="card-body">
    <%= form_with model: @post, local: true do |form| %>
        
        <div class="form-group">
            <%= form.label :title %><br>
            <%= form.text_field :title, class:"form-control" %>
        </div>
        
        <div class="form-group">
            <%= form.label :content %><br>
            <%= form.text_area :content, class:"form-control" %>
        </div>
        
        <div class="form-group">
            <%= form.submit %>
        </div>
        
    <% end %>
</div>

