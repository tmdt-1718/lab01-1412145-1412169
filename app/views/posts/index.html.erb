<!-- Breadcrumbs-->
<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <a href="<%= root_path %>">Home</a>
  </li>
  <li class="breadcrumb-item active">Blog</li>
</ol>

<div class="mb-0 mt-4">
    <i class="fa fa-newspaper-o"></i> Blog
</div>
<hr class="mt-2">


<% @post.each do |post| %>
    <div class="card-rows my-blog-post-index">
        <div class="card mb-3">
            <div class="card-body">
                <div class="media mt-3">
                    <a class="d-flex pr-3" href="#">
                        <img src="http://placehold.it/45x45" alt="">
                    </a>
                    <div class="media-body">
                        <h6 class="card-title mb-1"><a href="#"><%= post.username %></a></h6>
                        <div class="small text-muted">32 mins ago</div>
                    </div>
                </div>
                <p class="card-text medium">
                    <h4><b><%= post.title %></b></h4>
                </p>
                <p class="card-text medium">
                    <%= post.content %>
                </p>
                <p class="card-text small" align="right">
                    <a href="<%= post_path(post) %>">View more >></a>
                </p>
            </div>
            <hr class="my-0">
            <div class="card-footer medium text-muted">
                <a class="mr-3 d-inline-block">
                    <i class="fa fa-fw fa-eye"></i> <%= post.viewcount %></a>
            </div>
        </div>
    </div>
<% end %>

